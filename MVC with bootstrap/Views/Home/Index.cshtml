<link href="~/CustomStyle.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@*utility classes(hide or show)*@
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="customStyleForShowHide">All screeen</div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 hidden-xs">
            <div class="customStyleForShowHide">Medium,Large,Small</div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 hidden-sm hidden-xs">
            <div class="customStyleForShowHide">Medium and Large</div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 hidden-md hidden-sm hidden-xs">
            <div class="customStyleForShowHide">Large</div>
        </div>
    </div>
</div>

@*adding an image*@
<div class="container">
    <div class="row">
        <img src="~/Images/img.jpg" class="col-md-4 col-md-offset-4 img-responsive img-circle"/>        
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <div class="customDiv">Column 1</div>
        </div>
        <div class="col-md-4">
            <div class="customDiv">Column 2</div>
        </div>
        <div class="col-md-4">
            <div class="customDiv">Column 3</div>
        </div>            
    </div>
</div>
<br /><br /><br />



@*grid styles*@
<div class="container">
    <div class="row">
        <div class="col-md-2 col-lg-4 col-sm-3">
            <div class="customDiv">Left side bar</div>
        </div>
        <div class="col-md-8 col-lg-4 col-sm-6">
            <div class="customDiv">Middle bar</div>
        </div>
        <div class="col-md-2 col-lg-4 col-sm-3">
            <div class="customDiv">Right side bar</div>
        </div>
    </div>
</div>
<br /><br /><br />

@*nesting grids*@
<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <div class="row">
                <div class="col-xs-12">
                    <div class="sidebarContent">Sidebar 1</div>
                </div>
                <div class="col-xs-12">
                    <div class="sidebarContent">Sidebar 2</div>
                </div>
            </div>
        </div>
        <div class="col-xs-9">
            <div class="mainContent">Main content</div>
        </div>
    </div>
</div>
<br /><br /><br />

@*dynamic list group items*@
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="list-group">
                @foreach (string str in ViewBag.Cities)
                {
                    <a href="@str" class="list-group-item">@str</a>
                }
            </div>
        </div>
    </div>
</div>

